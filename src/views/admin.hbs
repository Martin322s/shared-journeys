<div class="admin-container">
    <!-- Навигация -->
    <nav class="admin-nav">
        <h1>Администраторски Панел</h1>
        <ul>
            <li><a href="#users"><i class="fas fa-users"></i> Потребители</a></li>
            <li><a href="#content"><i class="fas fa-file-alt"></i> Съдържание</a></li>
            <li><a href="#stats"><i class="fas fa-chart-bar"></i> Статистики</a></li>
            <li><a href="#settings"><i class="fas fa-cog"></i> Настройки</a></li>
        </ul>
        <div class="theme-switch">
            <input type="checkbox" id="theme-toggle">
            <label for="theme-toggle">Тъмна тема</label>
        </div>
    </nav>

    <!-- Основно съдържание -->
    <main class="admin-main">
        <!-- Секция за потребители -->
        <section id="users" class="section">
            <h2>Управление на Потребители</h2>
            <table class="user-table">
                <thead>
                    <tr>
                        <th>Име</th>
                        <th>Имейл</th>
                        <th>Роля</th>
                        <th>Действия</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Потребител 1</td>
                        <td>user1@example.com</td>
                        <td>Потребител</td>
                        <td>
                            <button class="btn-role">Промени роля</button>
                            <button class="btn-deactivate">Деактивирай</button>
                        </td>
                    </tr>
                    <tr>
                        <td>Потребител 2</td>
                        <td>user2@example.com</td>
                        <td>Администратор</td>
                        <td>
                            <button class="btn-role">Промени роля</button>
                            <button class="btn-deactivate">Деактивирай</button>
                        </td>
                    </tr>
                </tbody>
            </table>
        </section>

        <!-- Секция за съдържание -->
        <section id="content" class="section">
            <h2>Управление на Съдържание</h2>
            <div class="content-grid">
                <div class="content-card">
                    <h3>Пътуване до Рила</h3>
                    <p>Публикувано на: 12.10.2023</p>
                    <div class="actions">
                        <button class="btn-delete">Изтрий</button>
                        <button class="btn-restore">Възстанови</button>
                    </div>
                </div>
                <div class="content-card">
                    <h3>Пътуване до Пирин</h3>
                    <p>Публикувано на: 10.10.2023</p>
                    <div class="actions">
                        <button class="btn-delete">Изтрий</button>
                        <button class="btn-restore">Възстанови</button>
                    </div>
                </div>
            </div>
        </section>

        <!-- Секция за статистики -->
        <section id="stats" class="section">
            <h2>Статистики</h2>
            <div class="stats-chart">
                <canvas id="myChart"></canvas>
            </div>
        </section>

        <!-- Секция за настройки -->
        <section id="settings" class="section">
            <h2>Настройки на Платформата</h2>
            <form class="settings-form">
                <label for="contact-email">Имейл за контакт:</label>
                <input type="email" id="contact-email" name="contact-email" placeholder="Въведете имейл">
                <button type="submit" class="btn-save">Запази</button>
            </form>
        </section>
    </main>
</div>

<!-- Модален прозорец за действия -->
<div id="modal" class="modal">
    <div class="modal-content">
        <span class="close">&times;</span>
        <h3>Промяна на роля</h3>
        <p>Изберете нова роля за потребителя:</p>
        <select>
            <option value="user">Потребител</option>
            <option value="admin">Администратор</option>
        </select>
        <button class="btn-confirm">Потвърди</button>
    </div>
</div>