<main>
    <section class="py-5" id="edit-trip-page">
        <div class="container edit">
            <h1>Редактиране на споделена обява</h1>
            <div>
                <form action="/roads/edit-offer/{{offer._id}}" method="POST" enctype="multipart/form-data">
                    <div class="edit-label">
                        <label for="startPoint"> <i class="fas fa-map-marker-alt"></i> Начална точка:</label>
                        <label for="endPoint"> <i class="fas fa-map-marker-alt"></i> Крайна точка:</label>
                    </div>
                    <div class="form-group edit-input">
                        <input type="text" class="form-control-2" id="startPoint" name="startPoint" value="{{offer.startPoint}}">
                        <input type="text" class="form-control-2" id="endPoint" name="endPoint" value="{{offer.endPoint}}">
                    </div>
                    <div class="edit-label">
                        <label for="date"> <i class="far fa-calendar-alt"></i> Дата:</label>
                        <label for="time"> <i class="far fa-clock"></i> Час:</label>
                    </div>
                    <div class="form-group edit-input">
                        <input type="date" class="form-control-2" id="date" name="date" value="{{offer.date}}">
                        <input type="time" class="form-control-2" id="time" name="time" value="{{offer.time}}">
                    </div>
                    <div class="edit-label">
                        <label for="carImage">Снимка на автомобила:</label>
                        <label for="carBrand">Марка на автомобила:</label>
                    </div>
                    <div class="form-group edit-input">
                        <input type="file" class="form-control-2" id="carImage" name="carImage" value="">
                        <input type="text" class="form-control-2" id="carBrand" name="carBrand" value="{{offer.carBrand}}">
                    </div>
                    <div class="edit-label">
                        <label for="seats">Свободни места:</label>
                        <label for="price">Цена:</label>
                    </div>
                    <div class="form-group edit-input">
                        <input type="text" class="form-control-2" id="seats" name="seats" value="{{offer.seats}}">
                        <input type="text" class="form-control-2" id="price" name="price" value="{{offer.price}}">
                    </div>
                    <div class="form-group">
                        <label for="description">Подробна информация за пътуването</label>
                        <textarea class="form-control" id="description" name="description">{{offer.description}}</textarea>
                    </div>
                    <button type="submit" class="btn btn-primary">Сподели</button>
                </form>
            </div>
        </div>
    </section>
</main>